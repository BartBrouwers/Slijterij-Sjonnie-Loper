@model IEnumerable<Slijterij_Sjonnie.Models.Reservering>

@{
    ViewBag.Title = "Reserveringen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reserveringen</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container bg-body-content">
    <div class="card">
        <div class="card-body">
            <table style="margin-top: 10px;" class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Whisky.Etiket.Naam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Aantal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Datum)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Whisky.Etiket.Naam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Aantal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Datum)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            </td>
                        </tr>
                    }

            </table>
        </div>
    </div>
</div>